<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.alatoo.sakta.UserController"
      style="-fx-background-color: linear-gradient(to bottom, #f0f4f8, #d9e2ec); -fx-padding: 30; -fx-border-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);"
      prefWidth="500" prefHeight="400">

    <Label text="User Dashboard" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-padding: 0 0 15 0;" />

    <Button fx:id="shareLocationButton" text="📍 Share Location" onAction="#onShareLocationPressed"
            style="-fx-background-color: linear-gradient(to bottom, #34c759, #28a745); -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 20; -fx-padding: 10 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 4, 0, 2, 2);" />

    <Button fx:id="logoutButton" text="🚪 Logout" onAction="#handleLogout"
            style="-fx-background-color: linear-gradient(to bottom, #ff5e57, #d9534f); -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 20; -fx-padding: 10 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 4, 0, 2, 2);" />
</VBox>
